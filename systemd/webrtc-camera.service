[Unit]
Description=Raspberry Pi WebRTC Camera (Debian 12)
After=network-online.target

[Service]
Type=simple
User=rpi
Group=rpi
WorkingDirectory=/home/rpi/webrtc_clover_drone
ExecStart=/usr/bin/python3 /home/rpi/webrtc_clover_drone/server.py --host 0.0.0.0 --port 8082 --width 1280 --height 720 --fps 30 --bitrate 2500000
Restart=on-failure
Environment=PYTHONUNBUFFERED=1
# Optionally enable STUN
#Environment=STUN_SERVER=stun://stun.l.google.com:19302

[Install]
WantedBy=multi-user.target